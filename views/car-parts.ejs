<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Universal - Services And Aepairs Made Easy</title>

    <%- include('includes/head') %>
        <!-- Tailwind Css -->
</head>

<body class="bg-gray-100">

    <!--------------------------------- Main Header Section -------------------------------->

    <%- include('includes/header') %>

        <!--------------------------------- Brudcrumb Section -------------------------------->
        <section>
            <div class="brudcrum">
                <div class="flex">
                    <div class="left bg-red-600 w-[50%] relative bg-edge">
                        <div
                            class="brud-text sm:py-20 md:py-20 py-10 sm:pl-[20px] md:pl-[20px] pl-[10px] lg:py-40 lg:pl-[150px]">
                            <h3 class="sm:text-4xl text-3xl font-[700] text-white">Car Parts</h3>
                        </div>
                    </div>
                    <div class="right w-[50%]" style="background-image: url('assets/images/others/brud-crum1.png');">
                    </div>
                </div>
            </div>
        </section>
        <!--------------------------------- Product Section -------------------------------->
        <section class="md:p-10">
            <div class="car-containers md:px-10 px-4">
                <div class="product-titles">
                    <h3 class="title text-2xl md:text-3xl font-bold mt-3 md:mt-0">Refurbished Engines for All Cars</h3>
                    <p class="para" id="totalCarItems"></p>
                </div>
                <div class="text-left md:flex justify-end mt-3 md:mt-0">
                    <div class="relative">
                        <input type="text" id="searchEngine" class="p-3 rounded-[30px] pl-10 w-[100%] outline-none md:w-[400]"
                            placeholder="Search for products">
                        <span class="absolute left-4 top-4"><img src="assets/images/icons/search.svg" class="w-[17]"
                                alt=""></span>
                    </div>
                </div>
                <div class="flex items-center mt-5 md:mt-0">
                    <a href="engines" class="p-2 px-[20px] bg-white  rounded-[10px]">Engines</a>
                    <a href="car-parts" class="p-2 px-[20px] bg-red-700 text-white rounded-[10px]">Car Parts</a>
                </div>
                <!--------------------------------- Filter Section -------------------------------->
                <div class="md:flex bg-white md:p-10 gap-[50px] md:mt-0 mt-2">
                    <div class="md:w-[30%] md:mb-0 mb-2">
                        <select name="" id="manufacturerSelect"
                            class="p-2 border-[1px] border-gray-200 px-[5px] w-[100%] required">
                            <option value="">Choose Manufacturer</option>
                        </select>
                    </div>
                    <div class="md:w-[30%] md:mb-0 mb-2">
                        <select name="c_modal" id="modalSelect"
                            class="p-2 border-[1px] border-gray-200 px-[5px] w-[100%]">
                            <option value="">Select Model</option>
                        </select>
                    </div>
                    <div class="md:w-[30%] md:mb-0 mb-2">
                        <select name="generation" id="generationSelect" class="p-2 border-[1px] border-gray-200 px-[5px] w-[100%]">
                            <option value="">Select Generation</option>
                            <option value="xyx">xyx</option>
                            <option value="xyx2">xyx2</option>
                            <option value="xyx3">xyx3</option>
                        </select>
                    </div>
                    <div class="md:w-[10%] md:mb-0 mb-2">
                        <div class="relative">
                            <label for="" class="absolute top-3 left-1"><svg xmlns="http://www.w3.org/2000/svg"
                                    width="18" height="18" viewBox="0 0 24 24">
                                    <path fill="#a59797" stroke="#a59797" stroke-linecap="round" stroke-linejoin="round"
                                        stroke-width="0.75"
                                        d="M4 3h16a1 1 0 0 1 1 1v1.586a1 1 0 0 1-.293.707l-6.414 6.414a1 1 0 0 0-.293.707v6.305a1 1 0 0 1-1.242.97l-2-.5a1 1 0 0 1-.758-.97v-5.805a1 1 0 0 0-.293-.707L3.293 6.293A1 1 0 0 1 3 5.586V4a1 1 0 0 1 1-1" />
                                </svg></label>
                            <select name="sort" id=""
                                class="p-2 border-[1px] border-gray-200 px-[5px] w-[100%] pl-6 outline-none">
                                <option value="">select</option>
                                <option value="Latest First">Latest First</option>
                                <option value="Previous First">Previous First</option>
                            </select>
                        </div>

                    </div>
                </div>
                <!--------------------------------- End -------------------------------->

                <!--------------------------------- Engines List-------------------------------->
                <div class="mt-10">
                    <div id="carGrid"
                        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-[20px]">
                      
                    </div>
                    <!-- if No Item Exists --> 
                    <div id="messageContainer"  class="mt-5 flex items-center flex-col items-center justify-center"></div>
                </div>

                <!---------------------------------Payment Method-------------------------------->
                <div class="mt-20">
                    <div class="bg-white p-5 rounded-[10px]">
                        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-[20px]">
                            <div class="border border-[1px] p-8  rounded-[10px]">
                                <h3 class="text-2xl mb-2 font-[600]">Convenient delivery</h3>
                                <p class="text-gray-300">Lorem ipsum dolor sit amet, consectetur adipiscing
                                    elit Duis quis ultricies leo. </p>
                                <div class="mt-[20px]">
                                    <img src="assets/images/others/payment-img.svg" />
                                </div>
                            </div>
                            <div class="border border-[1px] p-8  rounded-[10px]">
                                <h3 class="text-2xl mb-2 font-[600]">Flexible payment</h3>
                                <p class="text-gray-300">Lorem ipsum dolor sit amet, consectetur adipiscing
                                    elit Duis quis ultricies leo. </p>
                                <div class="mt-[20px]">
                                    <img src="assets/images/others/payment-img.svg" />
                                </div>
                            </div>
                            <div class="border border-[1px] p-8  rounded-[10px]">
                                <h3 class="text-2xl mb-2 font-[600]">Flexible payment</h3>
                                <p class="text-gray-300">Lorem ipsum dolor sit amet, consectetur adipiscing
                                    elit Duis quis ultricies leo. </p>
                                <div class="mt-[20px] leading-[1px]">
                                    <h3 class="text-2xl mb-2 font-[600]">+41 2542 253 2542</h3>
                                    <span>info@caruniversal.co.uk</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('includes/footer') %>
            <%- include('includes/foot') %>

</body>

</html>